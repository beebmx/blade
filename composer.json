{
    "name": "beebmx/blade",
    "description": "The standalone version of Laravel's Blade templating engine for use outside of Laravel.",
    "keywords": [
        "laravel",
        "blade",
        "template",
        "view",
        "render",
        "kirby",
        "kirby-plugin",
        "kirby3",
        "kirby4",
        "kirby5"
    ],
    "license" : "MIT",
    "authors": [
        {
            "name": "Jens Segers",
            "homepage": "https://jenssegers.com"
        },
        {
            "name": "Fernando Gutierrez",
            "homepage": "https://beeb.mx"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/view": "^10.0|^11.0|^12.0",
        "illuminate/config": "^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.10",
        "spatie/ray": "^1.40",
        "pestphp/pest": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Beebmx\\Blade\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
